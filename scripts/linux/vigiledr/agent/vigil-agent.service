[Unit]
Description=VigilEDR Agent Service
After=network-online.target
Wants=network-online.target

[Service]
Type=notify
Restart=on-failure
Environment="PATH=/sbin:/bin:/usr/sbin:/usr/bin"
ExecCondition=/usr/bin/python3 /usr/local/vigil/configCheck.py
ExecStart=/usr/bin/python3 /usr/local/vigil/manager.py
StartLimitInterval=1s
StartLimitBurst=999
NotifyAccess=All

[Install]
WantedBy=multi-user.target